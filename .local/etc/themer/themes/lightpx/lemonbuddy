foreground = #222222
linecolor = #666

border-bottom = 2
border-bottom-color = #aafafafa

spacing = 1
lineheight = 2
padding_left = 2
padding_right = 2
module_margin_left = 1
module_margin_right = 2

font-0 = envypn-regular:size=10;0
font-1 = Siji:pixelsize=10;0
font-2 = Termsynu:size=8;0

modules-left = mpd
modules-center = bspwm
modules-right = volume wifi battery backlight memory cpu date


[bar/external_bottom]
monitor = HDMI-1
bottom = true
width = 100%
height = ${bar/top.height}

background = ${bar/top.background}
foreground = ${bar/top.foreground}
linecolor = ${bar/top.linecolor}

border-top = ${bar/top.border-bottom}
border-top-color = ${bar/top.border-bottom-color}

spacing = ${bar/top.spacing}
lineheight = ${bar/top.lineheight}
padding_right = ${bar/top.padding_right}
