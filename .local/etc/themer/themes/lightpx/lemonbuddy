ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #666


[module/date]
type = internal/date
date = %%{T3}%%{F#666}%{F#222} %Y-%m-%d  %%{F#ec4834}%%{F#222} %H:%M%%{T-}
interval = 5


[module/backlight]
type = internal/backlight
