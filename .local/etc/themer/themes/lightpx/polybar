font-0 = ${bar/top.font-0}
font-1 = ${bar/top.font-1}

modules-left = bspwm
modules-right = date


[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

ws-icon-0 = term;
ws-icon-1 = web;
ws-icon-2 = code;
ws-icon-3 = music;
ws-icon-4 = irssi;
